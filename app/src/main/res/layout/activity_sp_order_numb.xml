<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/background"
    tools:context="red.softgrip.com.red.SPActivities.SpOrderNumb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:background="@drawable/app_barr">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_sp_order_num_menu"
            android:background="@drawable/ic_menu"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUEST HOSTORY"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="0.7"
        android:layout_marginTop="10dp"
        android:background="@drawable/selecttrainersbox"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_red_location" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_dots" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_blue_location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Location"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/end_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="End Location"
                    android:textSize="14dp" />
            </LinearLayout>
            <View
                android:layout_width="170dp"
                android:layout_height="1dp"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp"
        android:weightSum="6"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:textColor="@color/colorGreen"
            android:textSize="13dp"
            android:text="VEHICLE NUMBER"/>
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Mia 123"
            android:textColorHint="@color/colorGray"
            android:textAlignment="center"
            app:backgroundTint="@color/colorGreen"
            android:id="@+id/et_sp_orderNum_vehicle_no"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:textColor="@color/colorGreen"
            android:textSize="13dp"
            android:text="VEHICLE INFO"/>
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Toyota, Camry, 2015"
            android:textColorHint="@color/colorGray"
            android:textAlignment="center"
            app:backgroundTint="@color/colorGreen"
            android:id="@+id/et_SP_orderNum_vehicle_info"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:textColor="@color/colorGreen"
            android:textSize="13dp"
            android:text="TYRE SIZE"/>
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/ic_user"
            android:hint="1234"
            android:textColorHint="@color/colorGray"
            android:textAlignment="center"
            app:backgroundTint="@color/colorGreen"
            android:id="@+id/et_sp_orderNum_tyre_size"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sp_orderNum_arrived"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@drawable/shape_btn_white"
            android:text="I HAVE ARRIVED"
            android:textColor="@color/colorGreen"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
